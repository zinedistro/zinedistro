$link_color: darken(steelblue, 0);
$link_hover_color: #181818;
$link_alternate_color: cornsilk;

// blueprint overrides...
abbr,
acronym {
  border: 0;
}

.alt {
  color: #333;
  font-size: 1.2em;
}

body,
a.button,
button,
#site_search input {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif !important;
}

a.button,
button {
  display: inline;
  float: none;
  margin: 0;
}

.even {
  background: #e5ecf9;
}

// html5...

header,
footer,
nav,
article,
aside,
section {
  display: block !important;
}

// ...html5

// font includes...

@font-face {
  font-family: 'Chunkfive';
  src: url(<%= font_url 'Chunkfive.ttf' %>) format('truetype');
}

// ...font includes

// search...
#site_search input {
  color: #999;
}

// ...search

// links...
a, a h3, a h4 {
  border: 0;
  padding: .25em;
  text-decoration: none;
  color: $link_color;

  &:hover {
    background: none;
    color: $link_hover_color;
  }

}

article a {
  font-weight: bold;
  margin: 0 -.15em;
}
// ...links

// header...
header {
  background: #eee;
  padding: 1em 0;

  h1,
  h2 {
    display: inline;

    & a:hover {
      background: none;
      color: #000;
    }
  }

  h1 {
    font-family: 'Chunkfive', 'Helvetica Neue', Helvetica, sans-serif;
    font-weight: bold;
    letter-spacing: -.04em;
    margin-right: .25em;

    & a {
      color: #666;
      padding: 0;
    }
  }

  h2 a {
    color: #ccc;
  }

  .links {
    float: right;
    margin-top: 1em;

    & ul,
    & li,
    & form {
      display: inline;
      margin: 0;
      padding: 0;
    }
  }
}

// ...header

// main...
main {
  padding: 4em 0 2em;
}

// ...main

// zine article...
.zine {
  &:first-of-type {
    padding-top: 1em;
  }

  a.cover_image, aside.cover {
    background: none;
    display: block;
    margin: 6px 14px 0 0;
    height: 200px;
    width: 136px;
    outline: 1px solid #ccc;

    & a:hover {
      background: none;
    }

    figure {
      background-repeat: no-repeat;
      background-size: contain;
      margin: 0 auto;
      height: 200px;
      width: 129px;
      overflow: hidden;

      figcaption {
        visibility: hidden;
        height: 100%;
      }
    }
  }

  .meta {
    width: 786px;

    a {
      padding: 0;
    }
  }

  .meta {
    h3 {
      font-size: 3em;
      font-weight: bold;
      margin: 0;
      padding: 0;
    }

    h4 {
      font-size: 2em;
      margin: 0;
      padding: 0;
    }

    h5 {
      margin: 0;
      padding: 0;
    }
  }

  .full_text {
    font-size: 1.5em;
    margin-top: 2em;

    & p:first-child {
      background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#eee), to(#fff));
      font-family: georgia, times, serif;
      font-size: 1.25em;
      padding: 1em;
    }
  }

  nav {
    float: right;
    padding: 0 0 1em 2em;
  }

  .download {
    font-size: 1.5em;
    text-align: right;
    margin-top: 12px;

    a {
      background: #eee;
      border: 1px solid $link_hover_color;
      padding: .5em;

      &:hover {
        background: #eee;
        color: #000;
      }
    }
  }

  .previous_next, .zine_back {
    margin: 0;
    padding: 0;
    text-align: right;

    li.border {
      border-right: 1px solid #ccc;
      padding-right: .5em;
    }

    li {
      display: inline;
    }

    a {
      font-weight: normal !important;
    }
  }

  .zine_back:before {
    content: "\2190"
  }

}

// ...zine article

// zines index...
#zines {
  .zine {
    margin-bottom: 5em;
  }

  .stats {
    color: #ccc;
    font-size: 1em;
    line-height: 100%;

    .alt {
      color: #999;
    }
  }

  .excerpt {
    color: #666;

    p {
      margin-bottom: .5em;
    }
  }
}

// ...zines index

// footer...
footer {
  background: #eee;
  margin-top: 2em;
  padding: 1em 0;

  ul {
    margin: 0;
    padding: 0;

    li {
      border-right: 1px solid #666;
      display: inline;
      margin: 0 .5em 0 0;
      padding: 0 1em 0 0;

      &:last-child {
        border: 0;
        float: right;
        margin: 0;
        padding: 0;
      }

      &.feed {
        border: 0;
        margin: 0;
        padding: 0;
      }
    }
  }
}

// ...footer

// authors...
.authors {

  label, input, button, .buttons {
    display: inline !important;
  }

  input { width: 66%; }
  button { padding: .5em !important; }

  li {
    display: inline;
    line-height: 3em;
    margin: 0;
    padding: 1em;
  }
}

// ...authors

// pagination...
.pagination {
  list-style-type: none;
  margin: 2em auto 0;
  text-align: center;

  ul, li {
    margin: 0;
    padding: 0;
    display: inline;
  }
  .active {
    a {
      color: $link_alternate_color;
      background-color: $link_color;
    }
  }

  .page {
    display: inline;
  }

  .disabled {
    color: #999;
  }

  .gap {
    color: #666;
  }

  .current {
    font-weight: bold;
  }

  .current,
  a {
    border: 1px solid #ccc;
    line-height: 100%;
    margin: 0;
    padding: .5em;
  }

}

// ...pagination
